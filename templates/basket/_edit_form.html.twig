    	<input type="hidden" name="_token" value="{{ csrf_token('basket_edit' ~ app.user.id) }}">
	{% else %}
		<input type="hidden" name="id" value="{{ item.id }}">
	{% endif %}
	<div class="form-outline">
		<input type="number" class="form-control" id="newBasketQuantity" name="quantity" min="1" max="{{ item.product.quantity }}" value="{{ item.quantity }}">
