{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
    <link href="/resources/css/home.css" rel="stylesheet"/>
    <link href="/resources/css/categories.css" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="home">
        <h1 class="title">Bienvenue sur {{ app.request.server.get('APP_NAME') }} !</h1>
    </div>

    {% if categories|length > 0 %}
        <div class="row">
            {% for index, category in categories %}
                {% if not category.isRemoved %}
                    {% if (index % 3) is same as(0) and index is not same as(0) %}
                        </div><div class="row mb-4">
                    {% endif %}
                    <div class="col mb-4">
                        {{ include('assets/categoryCard.html.twig', {'category': category}) }}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    {% else %}
        <h6>Aucune cat√©gorie...</h6>
    {% endif %}
{% endblock %}
